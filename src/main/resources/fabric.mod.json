{
  "schemaVersion": 1,
  "id": "gildedarmor",
  "version": "${version}",

  "name": "Example Mod",
  "description": "This is a mod that adds gilded armor to the game.\nGilded armor makes piglins peaceful while you're using netherite armor.\nJust combine a piece of armor with a gold ingot on a smithing table and you're ready to go!",
  "authors": [
    "MaroonShaded"
  ],
  "contact": {
    "sources": "https://github.com/MaroonShaded/GildedArmorFabric"
  },

  "license": "MIT",
  "icon": "assets/gildedarmor/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "maroonshaded.gildedarmor.GildedArmor"
    ]
  },
  "mixins": [
    "gildedarmor.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.16.x"
  },
  "suggests": {
    "flamingo": "*"
  }
}
